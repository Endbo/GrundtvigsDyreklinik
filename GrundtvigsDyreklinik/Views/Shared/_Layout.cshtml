<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Grundtvigs Dyreklinik </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendar")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/profilePic/Untitledlog1.png" title="Grundtvigs Dyreklinik" height="100"/>
                </a>   
                @*@Html.ActionLink("Grundtvigs Dyreklinik", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Hjem", "Index", "Home")</li>

                    @if (User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Booking", "Index", "Bookings")</li>
                        <li>@Html.ActionLink("Dyr", "Index", "Pets")</li>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Booking", "Index", "Bookings")</li>
                        <li>@Html.ActionLink("Dyr", "Index", "Pets")</li>
                        <li>@Html.ActionLink("Art", "Index", "Species")</li>
                        <li>@Html.ActionLink("Race", "Index", "Races")</li>
                        <li>@Html.ActionLink("Rolle håndtering", "UserRoleIndex", "Account")</li>
                    }

                    <li>@Html.ActionLink("Behandling", "Index", "Treatments")</li>
                    <li>@Html.ActionLink("Om", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
  <div class="container body-content">
       <br />
      <br />
        @RenderBody()
        
        <footer>
            <p>&copy; @DateTime.Now.Year - Grundtvigs Dyreklinik</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/fullcalendar")
    @*@Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")*@
    @RenderSection("scripts", required: false)
</body>
</html>
