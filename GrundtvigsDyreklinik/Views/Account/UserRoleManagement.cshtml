@*conde inspired from .http://www.dotnetfunda.com/articles/show/2898/working-with-roles-in-aspnet-identity-for-mvc*@

@{
    ViewBag.Title = "UserRoleManagement";
}

<br />
<h2>User Role Managment</h2>


<div class="row">
    <div class="col-lg-offset-4">
        @if (ViewBag.UserRoles != null)
        {
            <div>
                <h3> Bruger Rolle </h3>
                <ol>
                    @foreach (string roles in ViewBag.UserRoles)
                    {
                        <li>
                            @roles
                        </li>
                    }
                </ol>
            </div>
        }
    </div>
    <hr />
    <div class="col-lg-offset-0 col-md-6">
        <h3>Tilføj rolle til</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div>
                @Html.TextBox("UserName", null, new { @readonly = "true" })
            </div>
            <br />
            <div>
                @Html.DropDownList("RoleNamn", (IEnumerable<SelectListItem>)ViewBag.Roles, "Vælge Rolle")
            </div>
            <br />
            <div>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>

        }
    </div>
    <hr>
    <div>
        <h3>Slet Rolle til</h3>
        @using (Html.BeginForm("UserRoleDelete", "Account"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div>
                @Html.TextBox("UserName", null, new { @readonly = "true" })
            </div>
            <br />
            <div>

                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Vælge Rolle")

            </div>
            <br />

            <input type="submit" value="Delete" class="btn btn-danger" />


        }
    </div>

    <br />
    <br /><br />
    @Html.ActionLink("Back to Index", "UserRoleIndex")

</div>
