@*conde inspired from .http://www.dotnetfunda.com/articles/show/2898/working-with-roles-in-aspnet-identity-for-mvc*@

@{
    ViewBag.Title = "UserRoleIndex";
}

@model GrundtvigsDyreklinik.ViewModel.UserRoleManagerVm

<br />
<h2> User Role Index </h2>
<br />
<hr />
<div class="container">
    <div class="row well">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <table class="table table-responsive table-striped table-hover ">

                <tr>

                    <th>
                        @Html.Label("Bruger Rolle")

                    </th>

                </tr>

                @foreach (var item in Model.UsersRole)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item)
                        </td>
                    </tr>

                }
            </table>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <table class="table table-responsive table-striped table-hover ">
                <tr>
                    <th>
                        @Html.Label("Bruger Email")
                    </th>
                </tr>

                @foreach (var item in Model.UsersEmailName)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item)

                        </td>

                    </tr>
                }
            </table>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <table class="table table-responsive table-striped table-hover ">
                <tr>
                    <th>
                        @Html.Label("Brugernavn")
                    </th>
                    <th>
                        @Html.Label("Administrer Roller ")
                    </th>
                </tr>

                @foreach (var item in Model.UsersName)
            {
                    <tr>

                        <td>
                            @Html.DisplayFor(model => item)
                        </td>
                        <td>
                            @Html.ActionLink("Manage Roles", "UserRoleManagement", new { UserName = item })

                        </td>
                    </tr>

                }
            </table>
        </div>
    </div>
</div>

